{
  "languages": {
    "JSON": {
      "preferred_line_length": 100
    },
    "JSONC": {
      "preferred_line_length": 100
    },
    "Rust": {
      "tab_size": 4,
      "tasks": {
        "variables": {
          "RUST_DEFAULT_PACKAGE_RUN": "zed"
        }
      }
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*[!dockerignore]"],
    "Git Ignore": ["dockerignore"]
  },
  "tab_size": 2,
  "hard_tabs": false,
  "formatter": "auto",
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true
}
